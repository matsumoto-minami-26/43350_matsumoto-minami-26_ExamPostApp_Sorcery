<%= form_with url: login_path, method: :post do |f| %>
    <div class="field">
        <%= f.label :Email %><br />
        <%= f.text_field :email %>
    </div>
    <div class="field">
        <%= f.label :Password %><br />
        <%= f.password_field :password %>
    </div>
    <div class="actions">
        <%= f.submit "Login" %>
    </div>
<% end %>